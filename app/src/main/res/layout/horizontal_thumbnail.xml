<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        layout="@layout/view_status"/>

    <ImageView
        android:id="@+id/thum_horizontal"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:background="@drawable/round_square"
        android:scaleType="centerCrop"
        android:src="@mipmap/sample" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thum_horizontal"
        android:layout_marginTop="9dp">

        <TextView
            android:id="@+id/thum_placeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:letterSpacing="-0.02"
            android:text="부산광역시 암낭동"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/thum_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thum_placeInfo"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:letterSpacing="-0.02"
            android:text="2월 11일 오후 5:08"
            android:textColor="#80000000"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>